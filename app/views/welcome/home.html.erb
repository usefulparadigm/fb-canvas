<h3>Using Server-side Library(Koala)</h3>

<%= @user %>
<%#= image_tag fb_profile_image_url(@user.fb_user_id) %>
<%= image_tag @user_picture %>
<%#= debug @user %>

<h3>Using XFBML</h3>

<div id="profile_pic">
	<fb:profile-pic uid="<%= @user.fb_user_id %>"></fb:profile-pic>
</div>
<div id="profile_name">
	<fb:name uid="<%= @user.fb_user_id %>" useyou="false"></fb:name>
</div>

<h3>Using JavaScript SDK</h3>

<div id="profile_pic_2">
	<img src="https://graph.facebook.com/<%= @user.fb_user_id %>/picture" border="0" />
</div>
<div id="profile_name_2"></div>

<script type="text/javascript" charset="utf-8">
	FB.api('/<%= @user.fb_user_id %>', function(response) {
		$('#profile_name_2').html(response.name);
	});
</script>